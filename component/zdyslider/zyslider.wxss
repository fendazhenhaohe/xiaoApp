/* component/zyslider.wxss */
.container {
    /*height: 100%;*/
    width: 100%;
    position: relative;
}

.slider-body {
    height: 8rpx;
    background-color: #ddd;
    position: relative;
}

.body {
    bottom: 60rpx;
    background-color: #f8f8f9;
    z-index: 0.3;
}

.left {
    bottom: 52rpx;
    z-index: 0.1;
}

.right {
    z-index: 0.2;
    bottom: 66rpx;
}

.slider-item {
    border-radius: 50%;
    width: 40rpx;
    height: 40rpx;
    background-color: #19896f;
    z-index: 2;
}

.min {
    position: relative;
    top: 8rpx;
    /*left: 100rpx;*/
}

.max {
    position: relative;
    bottom: 32rpx;
    /*left: 600rpx;*/
}

.hide{
  display: none;
}