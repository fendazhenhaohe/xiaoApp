/* pages/news/newsList.wxss */
.newsList{
  display: flex;
  width: 92%;
  margin: 0 auto;
  padding: 30rpx 0;
  border-top: 1rpx solid #e5e5e5;
}
.newsList image{
  width: 100rpx;
  height: 100rpx;
  margin-right: 15rpx;
}
.list{
   width: 550rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.listTop{
  width: 550rpx;
  display: flex;
  justify-content: space-between;
}
.listTop view text:first-child{
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 15rpx;
}
.listTop view text:nth-child(2){
  font-size: 28rpx;
  display: inline-block;
  background-color: #f2f2f3;
  color: #b1b3b5;
  padding: 5rpx 10rpx;
  border-radius: 10rpx;
}
.listTop>text{
  color: #b1b3b5;
  font-size: 28rpx;
}
.listTxt{
  width: 100%;
      display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
    color: #b7b9bb;
    font-size: 28rpx;
}
.bottom{
  width: 100%;
  height: 90rpx;
  text-align: center;
  background-color: #f2f2f3;
  color: #b7b9bb;
  line-height: 90rpx;
}