/* pages/jintie/jintie.wxss */
page{
  padding-bottom: 300px;
}
.head{
  width: 100%;
  height: 350rpx;
  background: url(http://video.ychengju.com/11/wx/jintieHeadBg.png);
  background-size: 100% 100%;
  box-sizing: border-box;
  padding-top: 20rpx;
}
.address image{
width: 45rpx;
height: 45rpx;
}
.address{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 130rpx;
  height: 60rpx;
  background-color: #7ab1c7;
  border-radius: 60rpx;
  color: #fff;
  font-size: 28rpx;
  margin-left: 30rpx;
}
.biaoti{
   width:250px;
  height: 120rpx;
  background: url(http://video.ychengju.com/11/wx/jintieBg.png);
  background-size: 100% 100%;
  margin:30rpx auto 30rpx auto;
}
.biaoti view{
  height: 100%;
  width: 100%;
  text-align: center;
  line-height: 110rpx;
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
}
.date{
  text-align: center;
  color: #fe7b53;
  font-family: 宋体;
  font-size: 32rpx;
  margin-top: 20rpx;
}
.coupon {
  width: 92%;
  margin: 0 auto;
}
.couponTitle{
  text-align: right;
  font-size: 24rpx;
  color: #888888;
  padding: 30rpx;
}
.couponView{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.couponList{
   width:320rpx;
  height: 300rpx;
  background: url(http://video.ychengju.com/11/wx/hbBg.png);
  background-repeat: no-repeat;
  background-size: 100% 100%;
  margin-bottom: 30rpx;
}
/* 红包内 */
.couponName{
  font-size: 28rpx;
  color: #a44e11;
  display: flex;
  align-items: center;
  padding-left: 50rpx;
  padding-top: 10rpx;
}
.couponName image{
  width: 30rpx;
  height: 30rpx;
}
.couponAddress{
  font-size: 24rpx;
  color: #c89470;
  padding-left: 50rpx;
}
.couponTxt{
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  padding-top: 70rpx;
}
.couponBut{
  font-size: 24rpx;
  background-color: #ffffff;
  color: #a44e11;
  width: 130rpx;
  height: 40rpx;
  border-radius: 40rpx;
  line-height: 40rpx;
  margin: 30rpx auto;
  text-align: center;
}
/* 模块内 */
.module{
  border:1rpx solid #e4e6f0;
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 30rpx 0 30rpx;
  margin-top: 30rpx;
}
.moduleTop{
  display: flex;
  justify-content: space-between;
}
.moduleLeft{
  width: 280rpx;
  height: 200rpx;
  position: relative;
  border-radius: 5rpx;
}
.moduleLeft image{
  width: 100%;
  height: 100%;
   border-radius: 5rpx;
}
.moduleLeft text{
  position: absolute;
  left: 0;
  top: 0;
  background-color: #fb5b54;
  color: #fff;
  font-size: 24rpx;
  border-radius: 5rpx 0 20rpx 0rpx;
  padding: 5rpx 10rpx;
}
.moduleRight{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.moduleName{
  display: flex;
  justify-content: space-between;
  width: 390rpx;
}
.moduleNameLeft{
  font-size: 28rpx;
  color: #222222;
}
.moduleNameRight text{
  font-size: 24rpx;
  padding: 1rpx 5rpx;
  border-radius: 2rpx;
}
.moduleNameRight text:first-child{
    border: 1rpx solid #101d37;
    margin-right: 10rpx;
}
.moduleNameRight text:nth-child(2){
  background-color: #5f94ff;
  color: #fff;
}
.moduleAddress{
  font-size: 24rpx;
  color: #9399a5;
}
.menu{
  display: flex;
}
.tagsLeft{
  position: relative;
}
.tagsLeft image{
  width: 60rpx;
  height: 80rpx;
}
.tagsLeft view{
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  color: #fff;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.tagsPrice{
  color: #fa5741;
  font-size: 30rpx;
}
.tagsRight{
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.tagsList{
  display: flex;
}
.tagsList text{
  font-size: 24rpx;
  color: #7885a2;
  background-color: #f0f2f5;
  padding: 1rpx 8rpx;
  border-radius: 5rpx;
  margin-right: 20rpx;
}
.sub{
  font-size: 24rpx;
  color: #222222;
  padding: 15rpx 0 0 0;
}
.sub text{
  border: 1rpx solid #c7cdd8;
  color: #c7cdd8;
  border-radius: 5rpx;
  margin-right: 20rpx;
  padding: 1rpx 8rpx;
}
.yh{
  display: flex;
  font-size: 24rpx;
  margin-top: 30rpx;
}
.yh text:first-child{
  color: #fff;
  background-color: #fa5741;
    border-radius: 5rpx;
    margin-right: 10rpx;
    padding: 1rpx 4rpx;
}
.yh text:nth-child(2){
  color: #fa5741;
  border: 1rpx solid #fa5741;
  border-radius: 5rpx;
  padding: 1rpx 15rpx;
}
.tips{
  display: flex;
  margin-top: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #e4e6f0;
}
.tips text{
  background-color: #fcf7ed;
  color: #bc7e32;
  font-size: 24rpx;
  padding: 1rpx 8rpx;
  border-radius: 5rpx;
  margin-right: 15rpx;
}
.moduleBut{
  display: flex;
  justify-content: flex-end;
  padding: 15rpx 0;
}
.moduleBut text{
 font-size: 28rpx;
 padding: 2rpx 6rpx;
 border-radius: 20rpx;
 margin-left: 15rpx;
}
.moduleBut text:first-child,.moduleBut text:nth-child(2){
  border: 2rpx solid #9399a5;
  color: #9399a5;
}
.moduleBut text:nth-child(3){
  background-color: #fe736d;
  color: #fff;
}