
page{
  padding-bottom: 200rpx;
}
/* 轮播 */
swiper{
  height: 180px;
}
swiper image{
  width: 100%;
  height: 100%;
}
.lunbo{
  position: relative;
}
.lunboSearch{
  box-sizing: border-box;
  position: absolute;
  top: 20px;
  left: 5%;
  padding: 0rpx 15rpx;
  background-color: #f2f0f0;
  width: 90%;
  height: 100rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.lunboSearch image{
  width: 45rpx;
  height: 45rpx;
  margin-right: 10rpx;
}
.searchRight{
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  height: 100%;
width: 200rpx;

}
.searchLeft{
  display: flex;
  justify-content: center;
  align-items: center;


}
.searchLeft text{
  color: #a2a2a2;
  font-weight: bold;
}
/* nav导航 */
.nav{
  display: flex;
  justify-content: space-around;
  padding: 40rpx 0rpx;
}
.nav image{
  width: 120rpx;
  height: 120rpx;
}
.nav view{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.nav text{
  font-family: "Microsoft YaHei";
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
}
/* 标题条 */
.sub{
  width: 92%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 0;
}
.subLeft{
  font-size: 40rpx;
  color: #333;
  font-weight: bold;
}
.subRight{
  color: #999999;
  font-size: 28rpx;
}
/* 帮我找房 */

.helpFind{
  width: 92%;
  margin: 0 auto;
  border-radius: 10rpx;
  box-sizing: border-box;
  border: 1px solid #cccccc;
  display: flex;
  justify-content: space-between;
  height: 200rpx;
  position: relative;
}

.helpFindTxt{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  margin-left: 25rpx;
font-size: 32rpx;
}
.helpFindTxt text{
  
  padding: 5rpx 0;
}
.helpFindTxt1 text{
    font-weight: bold;
  padding: 5rpx 0;
}
.helpFindTxt view{
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  padding-top: 15rpx;
}
.helpFind image{
  width: 150rpx;
  height: 150rpx;
  position: absolute;
  bottom: 0rpx;
  right: 0;
}
/* 热门楼盘 */
.hotFloor{
  width: 92%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
}
.hotimg{
  position: relative;
    width: 220rpx;
  height: 200rpx;
}
.hotimg image{
  width: 100%;
  height: 100%;
}
.hotimg text{
  background-color: #fff;
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  font-size: 28rpx;
  padding: 2rpx 5rpx;
}
.hotname{
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  padding-top: 10rpx;
}
.hotarea{
  color: #666;
  font-size: 28rpx;
  padding: 10rpx 0;
}
.hotprice{
  font-size: 32rpx;
  color: #fa5741;
  font-weight: bold;
}
/* 我是业主 */
.owner{
  width: 92%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
}
.owner image{
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  width: 50rpx;
  height: 50rpx;
}
.owner>view{
  position: relative;
  width: 320rpx;
  height: 150rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  box-sizing: border-box;
  padding: 30rpx 15rpx 10rpx 15rpx;
}
.owner>view view{
  display: flex;
  flex-direction: column;
  justify-content: center;
  /* align-items: center; */
}
.owner>view view text:first-child{
  font-weight: bold;
}
/* 城市列表 */

.city {
position: absolute;
right: 0;
top: 0;
  z-index: 100;
  height: 100rpx;
  
}

.cityName, .cityList view {
  height: 98rpx;
  width: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid #efeef3;
}

.cityList {
  background-color: #fff;
  border-radius: 10rpx;
  display: none;
}

.cityListnone {
  display: block;
  animation: slidown 0.2s ease-in-out both;
}
