.section .line .tl {
	float: right;
	color: #aaa;
}
.deng{
    margin-top: 80rpx;
}
.deng button{
    width: 90%;
    background-color: #fff;
    margin: 0 auto;
    border: 1rpx solid #FF4065;
    color: #FF4065;
    font-size: 28rpx;
}
.text{
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 28rpx;
    color: #DDDDDD;
}
.touxiang{
    width: 110rpx;
    height: 110rpx;
    border-radius: 110rpx;
    margin-right: 30rpx;
}
.touxiang image{
     width: 110rpx;
    height: 110rpx;
       border-radius: 110rpx;
}

/* 弹出框 */
/* pages/public/public.wxss */
modal{
    padding: 0
}
.modalhead{
    display: flex;
   margin-top: -20rpx;
   position: relative;
}
.modalhead>view{

    text-align: center;
    width: 100%;
    line-height: 70rpx;
}
.modalhead image{
position: absolute;
right: 0;
    height: 51rpx;
    width: 51rpx;
}
.modalimg{
    width: 100%;
    display: flex;
    justify-content: space-around;
    align-items: center;
    margin-top: 50rpx;
}
.modalimg image{
    width: 175rpx;
    height: 175rpx;
}
.modalimg>view>view{
    width: 165rpx;
    height: 50rpx;
    color: #fff;
    text-align: center;
    line-height: 50rpx;
    font-size: 24rpx;
    border-radius: 6rpx;
}
.green{
    background-color: #54C682;
}
.orgen{
    background-color: #FE8329;
}
.hx{
    background-color: #CCCCCC;
    height: 110rpx;
    width: 2rpx;
}
/* 横向导航 */
.navPerson{
  display: flex;
  justify-content: space-around;
  background-color: #ffffff;
  padding: 50rpx 0;
}
.navPerson view{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.navPerson view image{
  width: 60rpx;
  height: 60rpx;
}
.navPerson view text{
  font-size: 28rpx;
  margin-top: 20rpx;
}
.lines{
  width: 100%;
  height: 20rpx;
  background-color: #f8f8f8;
}