.ellipsis {
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden;
}
/*特殊按钮*/
button.yellow {
	color: #fff;
	background: #feb70f;
}

.header {
display: flex;
background: url('http://video.ychengju.com/11/wx/bg.png');
background-size: 100% 100%;
padding: 8%  5%;
}
.header .avatar {
	display: block;
	
	width: 120rpx;
	height: 120rpx;
	border-radius: 50%;
	border: 2px solid #fee767;
}
.header .nickname {
	color: #fff;
	font-size: 28rpx;
}
.header .nickday{
    display: flex;
    margin-top: 20rpx;
    font-size:24rpx;
}
.section {
	padding: 0;
	color: #2e2e2e;
	font-size: 30rpx;
}
.section .line {
	width: 90%;
    margin: 0 auto;
height: 120rpx;
line-height: 120rpx;
	border-bottom: 1px solid #efefef;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.section .line .line-left{
    display: flex;
    align-items: center;
}
.section .line .line-left  image{
    height: 42rpx;
    width: 42rpx;
    margin-right: 25rpx
}
.section .line .line-right{
    width: 13rpx;
    height: 22rpx;
}
.section .line:last-child {
	border-bottom: none;
}
