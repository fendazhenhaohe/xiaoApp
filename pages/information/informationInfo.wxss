/* pages/information/informationInfo.wxss */

.Fbannder {
  width: 100%;
  height: 300rpx;
  background: url(http://video.ychengju.com/11/wx/FbannerBg.png);
  background-repeat: no-repeat;
  background-size: cover;
}

.Fbannder view:first-child, .Fbannder view:nth-child(2) {
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  padding-top: 30rpx;
  padding-left: 40rpx;
}

.Fbannder view:nth-child(3) {
  background-color: #ffb80a;
  color: #fff;
  width: 240rpx;
  height: 80rpx;
  border-radius: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 60rpx;
  margin-top: 20rpx;
  font-size:24rpx;
}
.mationList {
  width: 92%;
  box-shadow: 1px 1px 10px 2px #f3f2f2;
  -webkit-box-shadow: 1px 1px 10px 2px #f3f2f2;
  -moz-box-shadow: 1px 1px 10px 2px #f3f2f2;
  -webkit-transition: all 0.4s;
  margin: 30rpx auto;
  border-radius: 5px;
  box-sizing: border-box;
  padding: 20rpx;
  font-size: 28rpx;

}
.mationList text{
  color: #028AC6;
}
.mationList image{
  width: 100%;
  height: 500rpx;
  margin: 30rpx 0;
}