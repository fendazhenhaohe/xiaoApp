/* pages/information/information.wxss */

.mationList {
  width: 92%;
  display: flex;
  box-shadow: 1px 1px 10px 2px #f3f2f2;
  -webkit-box-shadow: 1px 1px 10px 2px #f3f2f2;
  -moz-box-shadow: 1px 1px 10px 2px #f3f2f2;
  -webkit-transition: all 0.4s;
  margin: 30rpx auto;
  border-radius: 5px;
}

.mationLeft {
  width: 250rpx;
  height: 200rpx;
  border-radius: 5px 0 0 5px;
  position: relative;
}

.mationLeft>view {
  position: absolute;
  left: 0;
  top: 0;
  background-color: #ffb80a;
  color: #fff;
  padding: 2px 5px;
  border-radius: 5rpx 0 0 0;
  font-size: 28rpx;
}

.mationLeft image {
  width: 100%;
  height: 100%;
  border-radius: 5px 0 0 5px;
}

.mationRight {
  max-width: 420rpx;
  margin-left: 15rpx;
  padding: 5rpx 0;
}

.mationRight view:first-child {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  overflow: hidden;
  margin-top: 10rpx;
}

.mationRight view:nth-child(2) {
  font-size: 28rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  padding: 3rpx 0;
  opacity: 0.5;
}

/* ss */

.Fbannder {
  width: 100%;
  height: 300rpx;
  background: url(http://video.ychengju.com/11/wx/FbannerBg.png);
  background-repeat: no-repeat;
  background-size: cover;
}

.Fbannder view:first-child, .Fbannder view:nth-child(2) {
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  padding-top: 30rpx;
  padding-left: 40rpx;
}

.Fbannder view:nth-child(3) {
  background-color: #ffb80a;
  color: #fff;
  width: 240rpx;
  height: 80rpx;
  border-radius: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 60rpx;
  margin-top: 20rpx;
  font-size:24rpx;
}
